<% if notice.present? %>
	<p class="alert alert-info"><%= notice %></p>
<% end %>
<p>
  
  <h2><%= @post.title %></h2>
	<div class="text-muted">
		<small>Posted on <%= @post.created_at.to_formatted_s(:long) %></small>
	</div>
  
</p>

<p>
  
  <%= simple_format @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
